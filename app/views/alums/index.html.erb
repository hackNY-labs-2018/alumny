<p id="notice"><%= notice %></p>

<h1>Alums</h1>

<table>
  <thead>
    <tr>
      <th>Headshot</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Bio</th>
      <th>Hometown</th>
      <th>Headshot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alums.each do |alum| %>
      <tr class="alum">
        <td class="image">
          <%= image_tag(alum.headshot_url, class: 'list_image portfolio-headshot') %>
        </td>
        <td><%= alum.firstname %></td>
        <td><%= alum.lastname %></td>
        <td><%= alum.bio %></td>
        <td><%= alum.hometown %></td>
        <td><%= link_to 'Show', alum %></td>
        <td><%= link_to 'Edit', edit_alum_path(alum) %></td>
        <td><%= link_to 'Destroy', alum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

